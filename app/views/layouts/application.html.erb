<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield :title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %> -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'layout/css/style', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-toastr/2.1.1/angular-toastr.css">
    <%= yield(:for_head) %>
  </head>

  <body>
    <!-- <div class="container"> -->
      <% flash.each do |key, value| %>
        <script>toastr.<%= key %>("<%= value %>")</script>
      <% end %>
      <%= render "layouts/header" %>
      <%= yield(:for_content) %>
      <%= render "layouts/footer" %>
    <!-- </div> -->

    <%= yield(:for_js) %>
    <%= javascript_include_tag 'layout/js/jquery/jquery-2.2.4.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'layout/js/bootstrap/popper.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'layout/js/bootstrap/bootstrap.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'layout/js/plugins/plugins.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'layout/js/active.js', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
